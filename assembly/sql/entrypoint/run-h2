set -e

# JAVA_OPTS : Arguments to all JVMs
# H2_OPTS   : additional arguments to the H2 server JVM

# create schema right before startup
echo "CREATE SCHEMA IF NOT EXISTS KAPUADB;" > /home/kapua/tmp/backup.sql
eval java $JAVA_OPTS -cp /home/kapua/h2.jar org.h2.tools.RunScript -url jdbc:h2:/var/h2/data/kapuadb  -user kapua -password kapua -script /home/kapua/tmp/backup.sql
rm /home/kapua/tmp/backup.sql

# exec server
exec /usr/bin/java $JAVA_OPTS $H2_OPTS -cp /home/kapua/h2.jar org.h2.tools.Server -web -webAllowOthers -webPort 8181 -tcp -tcpAllowOthers -tcpPort 3306 -baseDir /var/h2/data
