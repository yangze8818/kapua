<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kapua.service.authorization.role.RoleService"
         name="RoleService" 
         description="This is the configuration for the kapua RoleService ">
        
        <Icon resource="OSGI-INF/account-service.png" size="32"/>

        <AD id="infiniteChildEntities"
            name="infiniteChildRoles"
            type="Boolean"
            cardinality="0"
            required="true"
            default="true"
            description="Whether to allow infinite roles for this account.">
        </AD>

        <AD id="maxNumberChildEntities"  
            name="maxNumberChildRoles"
            type="Integer"
            cardinality="0" 
            required="true"
            default="0" 
            min="0"
            description="Maximum number of roles that are allowed to be created for this account.">
        </AD>

    </OCD>
    
    <Designate pid="org.eclipse.kapua.service.authorization.role.RoleService">
        <Object ocdref="org.eclipse.kapua.service.authorization.role.RoleService"/>
    </Designate>
</MetaData>
